package restaurant;

publice class Item {

private String name;
private String category;
private double price;
NumberFormat numform=NumberFormat.getCurrencyInstance();

public Item(String name,String category, double price){
this.name=name;
this.category=category;
this.price=price;
}

public double getPrice() { return price;}
public void setPrice(double price) {this.price=price;}
public String getName() { return name;}
public void setName(String name) {this.name=name;}
public String getCategory() { return category;}
public void setCategory(String category) {this.category=category;}

public String toString(){
return name+ "\t" + numForm.format(price);
}
}



import java.util.ArrayList;
public class Menu{

private ArrayList<Item> soup = new ArrayList<Item>();
private ArrayList<Item> starters = new ArrayList<Item>();
private ArrayList<Item> main = new ArrayList<Item>();
private ArrayList<Item> drinks = new ArrayList<Item>();

public Menu(){
 populateMenu();
}

//returns a specific soup
public Item getSoup(int index){
 return soup.get(index);
}

 //  return the size of the category soups
 public int getSoupSize(){
 return soup.size();
 }

public String getAllSoup(){
String aMenu = "";
aMenu += "SOUPS:\n";
for(int i=0;i<soup.size();i++){
  Item a = soup.get(i);
    //add id,name and price
  aMenu += "A" + (i+1) + " " + a.toString() + "\n";
  }
 return aMenu;
}

//returns a specific starters
public Item getStarters(int index){
 return starters.get(index);
}

 //returns the size of the categry starters
public int getStartersSize(){
return starters.size();
}

public String getAllStarters(){
String aMenu = "";
aMenu += "STARTERS:\n";
for(int i=0;i<starters.size();i++){
  Item a = starters.get(i);
    //add id,name and price
  aMenu += "A" + (i+1) + " " + a.toString() + "\n";
  }
 return aMenu;
}


//returns a specific main dishes
public Item getMain(int index){
 return main.get(index);
}

 //returns the size of the categry starters
public int getMainSize(){
return main.size();
}

//returns the main dishes as a string
public String getAllMain(){
String aMenu = "";
aMenu += "MAIN DISHES:\n";
for(int i=0;i<main.size();i++){
  Item a = main.get(i);
    //add id,name and price
  aMenu += "A" + (i+1) + " " + a.toString() + "\n";
  }
 return aMenu;
}





//returns a specific main dishes
public Item getDrinks(int index){
 return drinks.get(index);
}

 //returns the size of the categry starters
public int getDrinksSize(){
return drinks.size();
}

//returns the Drinks as a string
public String getAllDrinks(){
String aMenu = "";
aMenu += "DRINKS:\n";
for(int i=0;i<drinks.size();i++){
  Item a = drinks.get(i);
    //add id,name and price
  aMenu += "A" + (i+1) + " " + a.toString() + "\n";
  }
 return aMenu;
}

 //methods ( Adding name of the dish and price) 

public void populateMenu(){
  //soup
  soup.add(new Item("Baby corn soup", "Soup", 80));
  soup.add(new Item("Tomato soup", "Soup", 90));
  soup.add(new Item("Chiken Manchow soup", "Soup", 120));
  soup.add(new Item("Paya soup", "Soup", 140));

  //starters
  starters.add(new Item("Baby corn 65", "Starters", 170));
  starters.add(new Item("Veg Manchuria", "Starters", 170));
  starters.add(new Item("Chilli chicken", "Starters", 200));
  starters.add(new Item("Chicken Drum sticks", "Starters", 225));

  //main dishes
  main.add(new Item("Paneer Butter Masala", "main", 230);
  main.add(new Item("Veg Biryani", "Rice", 200);
  main.add(new Item("Chetinad Chiken", "Curry", 240);
  main.add(new Item("Chiken Dum Biryani", "Rice", 250);

  //drinks 
  drinks.add(new Item("Water", "Drinks", 20));
  drinks.add(new Item("Coke", "Drinks", 50));
  drinks.add(new Item("Fruit Juice", "Drinks", 60));
}
//toString
public String toString(){
String menu ="";
menu += " Restaurant Menu\n"
"----------------------------------------------------------------\n";
menu += getAllSoup() + "\n";
menu += getAllStarters() + "\n";
menu += getAllMain() + "\n";
menu += getAllDrinks() + "\n";
return menu;
}
}



// This class runs the menu
public calss Runner{
 publie static void main(String[] args){
Menu menu= new Menu();

//prints entire menu
System.out.println(menu.toString());
}
}




// Order class

import java.util.ArrayList;
import java.util.Random;

public class Order{
  //fileds
private static int orderNo = 0;
private ArrayList<Item> order = new ArrayList<Item>();


  //constructors
public Order() {  }

  //mutators
  
  /*gete an item from the order*/
  public Item getItem(int index){
    reutrn order.get(index);
  }
  
 /* add items to order*/
 public void addItem(Item item){
    order.add(item);
  }

  //methods
  /*remove an item from order*/
  public void removeitem(Item item){ 
  order.remove(item);
  }
  
  /*No of items in an order*/
  public int getSize(){
  return order.size();
  }
  
  /* clears the order*/
public void clearOrder(){
  order.clear();
  }

/*get the order number*/
public int getNumber(){
 return orderNo;
}

/* increment order number*/
public void incrementNo(){
  orderNo++;
}

/* gets a random server for the order*/
public string getServer(){
Random rand= new Random();
int num= rand.nextInt(1) +1;
switch(num){
  case 1:
   retrun "A";
  case 2:
   return "B";
  case 3:
   return "C";
  case 4:
   return "D";
  default: 
   return "no server";
  
 }// end of switch
}


//toString
public String to String(){
String str="";
  for(int i=0;i<order.sie(0;i++){
   str += order.get(i).toString(0 + "\n\n";
  }//end of order loop
  return str;
 }
}
